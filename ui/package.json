{
  "name": "ctf-ui",
  "version": "0.1.0",
  "private": true,
  "description": "CTF frontend",
  "repository": "https://github.com/r34son/ctf",
  "author": {
    "name": "Yahub",
    "email": "seitasanov.yahub@gmail.com",
    "url": "https://github.com/r34son"
  },
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.6.2",
    "@mui/material": "^5.6.2",
    "@reduxjs/toolkit": "^1.8.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@testing-library/user-event": "^14.1.1",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.181",
    "@types/node": "^17.0.25",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "axios": "^0.26.1",
    "draft-js": "^0.11.7",
    "draftjs-to-html": "^0.9.1",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.21",
    "notistack": "^2.0.4",
    "react": "^18.0.0",
    "react-countdown": "^2.3.2",
    "react-dom": "^18.0.0",
    "react-hook-form": "^7.30.0",
    "react-redux": "^8.0.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "socket.io-client": "^4.4.1",
    "typescript": "^4.6.3",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "eslint:pre-commit": "eslint --fix",
    "prettier:pre-commit": "prettier --write",
    "prepare": "cd .. && husky install ui/.husky"
  },
  "eslintConfig": {
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "react-app",
      "react-app/jest",
      "airbnb",
      "airbnb-typescript",
      "plugin:react/jsx-runtime",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "react/jsx-props-no-spreading": "off",
      "react/function-component-definition": "off",
      "import/prefer-default-export": "off",
      "no-param-reassign": "off",
      "consistent-return": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.ts?(x)"
        ],
        "rules": {
          "@typescript-eslint/no-unused-vars": [
            "error",
            {
              "argsIgnorePattern": "^_"
            }
          ]
        }
      }
    ]
  },
  "lint-staged": {
    "src/*.{ts,tsx}": [
      "npm run prettier:pre-commit",
      "npm run eslint:pre-commit"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/draftjs-to-html": "^0.8.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1"
  }
}
